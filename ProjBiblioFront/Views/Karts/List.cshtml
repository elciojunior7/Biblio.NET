@model IEnumerable<ProjBiblioFront.Models.KartViewModel>

<h1>Carrinho</h1>

@if (Model == null || Model.Count() == 0)
{
    <br />
    <h3>Carrinho está vazio</h3>

}
else
{
    <br />
    @Html.ActionLink("Emprestar Livros", "LoanBooks")
    <br />
    @Html.ActionLink("Limpar", "CleanKart")
}

@if (TempData["MsgAlert"] != null)
{
    <br>
    <div class="alert alert-dismissible @TempData["MsgEstilo"]" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <strong>Aten&ccedil;&atilde;o!!!</strong>&nbsp;@TempData["MsgAlert"]
    </div>
}

<br />

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Produto</th>
            <th>Quantidade</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>

@{
    int qtde = 0;
    foreach (var item in Model)
    {
        qtde++;
        <tr>
            <td>@qtde</td>
            <td>@item.BookName</td>
            <td>@item.BookAmount</td>
            <td>
                @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
}
    </tbody>
</table>
